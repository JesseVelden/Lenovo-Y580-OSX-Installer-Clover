printf '\t\t<string>'"$boardserial"'</string>\n' >> $config

printf '\t\t<key>Mobile</key>\n' >> $config
printf '\t\t<'"$mobile"'/>\n' >> $config
printf '\t\t<key>Trust</key>\n' >> $config
printf '\t\t<false/>\n' >> $config
printf '\t</dict>\n' >> $config

