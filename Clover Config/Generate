printf '\t\t<false/>\n' >> $config
printf '\t\t<key>Timeout</key>\n' >> $config
printf '\t\t<integer>5</integer>\n' >> $config
printf '\t\t<key>XMPDetection</key>\n' >> $config
printf '\t\t<string>Yes</string>\n' >> $config
